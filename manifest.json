{
	"manifest_version": 3,
	"name": "Bare Minimum Hero",
	"version": "0.1",
	"description": "Celebrate your smallest achievements. You did the bare minimum? That counts!",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"permissions": [
		"storage",
		"alarms"
	],
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}